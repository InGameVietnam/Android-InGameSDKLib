<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:id="@+id/userinfo_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="5dp"
        tools:context=".UserInfoFragment" >

        <TextView
            android:id="@+id/suggest_update_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/warning"
            android:textSize="@dimen/text_size_14"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/box_username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/ingame_edittext_bg"
            android:gravity="left|center_vertical"
            android:orientation="horizontal" >


            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/ingame_avatar" />

            <com.ingamesdk.widget.IGEditText
                android:id="@+id/info_txtUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:ems="15"
                android:inputType="textNoSuggestions"
                android:maxLength="16"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textColor="@color/edittext_color"
                android:textSize="@dimen/text_size_15" />

            <ImageView
                android:id="@+id/info_imgUsername"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:paddingRight="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/ingame_edittext_bg"
            android:gravity="left|center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/ingame_email" />

            <com.ingamesdk.widget.IGEditText
                android:id="@+id/info_txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:ems="15"
                android:inputType="textNoSuggestions"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textColor="@color/edittext_color"
                android:textSize="@dimen/text_size_15" />

            <ImageView
                android:id="@+id/info_imgEmail"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:paddingRight="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/ingame_edittext_bg"
            android:gravity="left|center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/ingame_phone" />

            <com.ingamesdk.widget.IGEditText
                android:id="@+id/info_txtphone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:ems="15"
                android:inputType="number"
                android:maxLength="11"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textColor="@color/edittext_color"
                android:textSize="@dimen/text_size_15" />

            <ImageView
                android:id="@+id/info_imgPhone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:paddingRight="5dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/update_password_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/com_ingamesdk_color_mainColor"
            android:textSize="@dimen/text_size_14"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/ingame_edittext_bg"
            android:gravity="left|center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/id_userinfo_pass1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/ingame_password" />

            <com.ingamesdk.widget.IGEditText
                android:id="@+id/info_txtPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:ems="15"
                android:inputType="textPassword"
                android:maxLength="16"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textColor="@color/edittext_color"
                android:textSize="@dimen/text_size_15" />

            <ImageButton
                android:id="@+id/info_btnViewPass"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:alpha="0.4"
                android:background="@android:color/transparent"
                android:paddingRight="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ingame_eye" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp" >

            <com.ingamesdk.widget.IGButton
                android:id="@+id/btnInfoUpdate"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/ingame_button_selector"
                android:clickable="true"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@drawable/ingame_button_text_selector"
                android:textSize="@dimen/text_size_16" />

            <com.ingamesdk.widget.IGButton
                android:id="@+id/btnSkipUpdate"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/ingame_button_selector"
                android:clickable="true"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@drawable/ingame_button_text_selector"
                android:textSize="@dimen/text_size_16" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>