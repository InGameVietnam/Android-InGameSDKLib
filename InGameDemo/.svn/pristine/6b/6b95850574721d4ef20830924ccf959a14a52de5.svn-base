package com.ingame.demo;

import android.app.Activity;
import android.os.Bundle;
import android.view.View;
import android.widget.Button;
import android.widget.TextView;

import com.ingamesdk.manager.InGameSDK;

public class MainActivity extends Activity {

	public static InGameSDK m_InGameSDK = null;
	public static String appKey = "aab2a2ccc7560e9d4f8a54e546842736";
	public static MainActivity instance;
	Button btnLogin, btnRegister;
	TextView tvInfo;

	@Override
	protected void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);
		setContentView(R.layout.main);
		instance = this;
		m_InGameSDK = InGameSDK.getInstance();
		m_InGameSDK.init(this, this.appKey);
		tvInfo = (TextView) findViewById(R.id.tvInfo);
		btnLogin = (Button) findViewById(R.id.btnLogin);
		btnRegister = (Button) findViewById(R.id.btnRegister);

	}

	public void login(View v) {
		m_InGameSDK.Login();
	}

	public void Register(View v) {
		m_InGameSDK.Register();

	}

	public void switchAccount(View v) {

	}

	public void showUserInfo(View v) {
		m_InGameSDK.callShowUserInfo();
	}

	public void makePayment(View v) {
		m_InGameSDK.makePayment();
	}

	public void logOut(View v) {
		m_InGameSDK.Logout();
	}
}
