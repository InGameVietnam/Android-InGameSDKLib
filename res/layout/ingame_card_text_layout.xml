<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="horizontal" >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/ingame_edittext_selector"
        android:gravity="fill"
        android:padding="10dp">
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">
	        <ImageView
		        android:layout_width="25dp"
		        android:layout_height="25dp"
		        android:src="@drawable/ingame_icon_money" 
		        android:layout_marginRight="5dp"/>
	        <TextView
	            android:id="@+id/textMoney"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="@dimen/text_size_16"
	            android:textColor="#0a2b00"/>
        </LinearLayout>
        
        <ImageView
	        android:id="@+id/coins"
	        android:layout_width="25dp"
	        android:layout_height="25dp"
	        android:layout_gravity="center_horizontal|center_vertical"
	        android:src="@drawable/ingame_icon_arrow" />

        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">
	        <TextView
	            android:id="@+id/textValue"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="@dimen/text_size_16"
	            android:layout_marginRight="5dp"
	            android:textColor="@color/com_ingamesdk_color_mainColor"/>
	        <ImageView
		        android:id="@+id/diamond"
		        android:layout_width="25dp"
		        android:layout_height="25dp"
		        android:src="@drawable/ingame_icon_diamond" />
	   </LinearLayout>
	</FrameLayout>
</LinearLayout>